{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@open51/*": ["packages/*/dist"],
      "@open51/utils/*": ["packages/utils/dist/*"],
      "@open51/hooks/*": ["packages/hooks/dist/*"]
    },
    "jsx": "react",
    "lib": ["DOM", "ESNEXT"],
    "types": ["node", "react"],
    "noEmitOnError": true
  },
  "exclude": ["node_modules"]
}
